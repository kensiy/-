  <button class="cu-item arrow" open-type="feedback" style="width: 100%;text-align: left;">
    <navigator class="content" url="/pages/home/complaint/complaint" hover-class="none">
      <text class="cuIcon-writefill text-brown"></text>
      <text class="text-black" style="font-weight: 600;">意见反馈</text>
    </navigator>
  </button>
</view>

<view style="padding-left: 35rpx;">
  <button class="cu-btn bg-red margin-tb-sm lg" style="width: 680rpx;" bindtap="logOut">
    <text style="font-weight: 400;">注销登录</text></button>
</view>

