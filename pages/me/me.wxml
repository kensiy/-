<view style="height: 320rpx;">
  <view>
    <view class="container"></view>
    <open-data type="userAvatarUrl" class="img"></open-data>
    <open-data type="userNickName" class="text1" lang="zh_CN" style="font-size:35rpx"></open-data>
    <text class="text2" style="font-size:33rpx">欢迎来到小程序~</text>
    <view class="cu-tag bg-{{tag.color}} text3">{{tag.identity}}</view>
  </view>
</view>

<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl radius">
  <view class="cu-item arrow">
    <navigator class="content" url="/pages/me/myInfo/myInfo" hover-class="none">
      <text class="cuIcon-formfill text-green"></text>
      <text class="text-black" style="font-weight:600;">个人信息</text>
    </navigator>
  </view>
  <view class="cu-item arrow">
    <navigator class="content" url="/pages/me/message/message" hover-class="none">
      <text class="cuIcon-messagefill text-cyan"></text>
      <text class="text-black" style="font-weight:600;">消息管理</text>
    </navigator>
  </view>
  <view class="cu-item arrow" bindtap="scanCode">
    <view class="content" hover-class="none">
      <text class="cuIcon-scan text-red"></text>
      <text class="text-black" style="font-weight:600;">扫一扫</text>
    </view>
  </view>
